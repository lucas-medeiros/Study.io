<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zedlucas.studyio.MenuMateriaActivity">

    <TextView
        android:id="@+id/tvAtividade"
        android:layout_width="316dp"
        android:layout_height="37dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="6dp"
        app:layout_constraintHorizontal_bias="0.3"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/etAtividade"
        app:layout_constraintVertical_bias="0.434" />

    <EditText
        android:id="@+id/etAtividade"
        android:layout_width="314dp"
        android:layout_height="57dp"
        android:ems="10"
        android:hint="Responda a atividade aqui"
        android:inputType="textMultiLine"
        android:visibility="invisible"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="338dp" />
</android.support.constraint.ConstraintLayout>
