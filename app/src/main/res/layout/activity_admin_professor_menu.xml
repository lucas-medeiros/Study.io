<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zedlucas.studyio.AdminProfessorMenuActivity">

    <Button
        android:id="@+id/bAdicionarUsuario"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Adicionar usuário"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.51" />

    <Button
        android:id="@+id/bRemoveUsuario"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:text="Remover usuário"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bAdicionarUsuario" />

    <Button
        android:id="@+id/bNovaAtividade1"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:text="Submeter nova atividade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/bCorrigirAtividade"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/bRemoveUsuario" />

    <Button
        android:id="@+id/bCorrigirAtividade"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:background="@color/colorPrimary"
        android:text="Corrigir atividade"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvAtividade1"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="16sp"
        android:visibility="invisible"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bCorrigirAtividade" />

    <EditText
        android:id="@+id/etAtividade1"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginBottom="97dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Atividade"
        android:inputType="textPersonName"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAtividade1" />
</android.support.constraint.ConstraintLayout>
