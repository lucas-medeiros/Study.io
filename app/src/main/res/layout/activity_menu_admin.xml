<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zedlucas.studyio.MenuAdminActivity">

    <Button
        android:id="@+id/bAdicionarUsuario"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="Adicionar usuário"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/bRemoveUsuario"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginTop="34dp"
        android:background="@color/colorPrimary"
        android:text="Remover usuário"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bAdicionarUsuario"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/tvAdmin"
        app:layout_constraintVertical_bias="0.075" />

    <TextView
        android:id="@+id/tvAdmin"
        android:layout_width="311dp"
        android:layout_height="55dp"
        android:layout_marginBottom="249dp"
        android:text="TextView"
        android:textSize="18sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
